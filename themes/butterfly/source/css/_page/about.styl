    .Philosophical
        margin-top: 16px
        min-height: 240px
        display: flex
        gap: 16px

        +maxWidth768()
            flex-direction: column
            gap: 0
            margin-top: 0

        .P-box-left
            width: 60%
            padding: 2.25rem 2rem
